{
  "name": "@abolhasanashori/react-neshan-map",
  "version": "0.4.0",
  "description": "Unofficial React wrapper for neshan-mapbox-sdk",
  "keywords": [
    "react",
    "react18",
    "neshan",
    "map",
    "neshan-maps-platform",
    "mapbox",
    "mapbox-gl"
  ],
  "repository": "https://github.com/AbolhasanAshori/react-neshan-map",
  "license": "MIT",
  "author": "Abolhasan Ashori <abolhasan.ashori@gmail.com> (https://hasanthedev.ir)",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "check": "npm run check:format && npm run check:lint && npm run check:type",
    "check:format": "prettier ./src --check",
    "check:lint": "npm run lint",
    "check:type": "tsc --noEmit",
    "commitlint": "commitlint --edit",
    "dev": "npm run watch",
    "format": "eslint --fix ./src && prettier --write ./src",
    "lint": "eslint ./src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "precommit": "lint-staged",
    "prepare": "husky",
    "release": "commit-and-tag-version",
    "watch": "tsup src/index.ts --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/mapbox-gl": "^2.7.21",
    "@vercel/style-guide": "^6.0.0",
    "commit-and-tag-version": "^12.4.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "prettier-plugin-packagejson": "^2.5.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "@neshan-maps-platform/mapbox-gl": "^1.1.3",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "mapbox-gl": "^1.13.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  }
}
